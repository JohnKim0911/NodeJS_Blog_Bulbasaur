<%- include("partials/header.ejs") %>

<div class="mainContainer">
    <%- include("partials/aside.ejs") %>

    <main>
        <h2>Edit a post</h2>
        <form action="/editBackend" method="POST" class="formForBtn">
            <input type="hidden" name="id" value="<%= post.id %>">

            <label for="title">Title:</label><br>
            <input type="text" id="title" name="title" size="80" value="<%= post.title %>"><br>
            <br>

            <label for="content">Content:</label><br>
            <textarea id="content" name="content" rows="10" cols="75"><%= post.content %></textarea><br>

            <input type="submit" value="Edit" class="btn">

            <form action="/" class="formForBtn">
                <input type="submit" value="Cancel"  class="btn">
            </form>
        </form>
    </main>
    
</div> <!-- mainContainer -->

<%- include("partials/footer.ejs") %>